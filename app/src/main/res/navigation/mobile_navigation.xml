<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/destination_home">

    <fragment
        android:id="@+id/destination_home"
        android:name="com.studio.azhar.navigationandroidjetpack.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_destination_home_to_detailActivity"
            app:destination="@id/detailActivity" />
    </fragment>
    <fragment
        android:id="@+id/destination_camera"
        android:name="com.studio.azhar.navigationandroidjetpack.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/destination_akun"
        android:name="com.studio.azhar.navigationandroidjetpack.AkunFragment"
        android:label="fragment_akun"
        tools:layout="@layout/fragment_akun" />
    <activity
        android:id="@+id/detailActivity"
        android:name="com.studio.azhar.navigationandroidjetpack.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />
</navigation>